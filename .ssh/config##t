# vim: set ft=sshconfig foldmethod=marker foldlevel=0:

ControlMaster auto
{% if yadm.os == "Darwin" %}
ControlPath ~/Library/Caches/ssh/%r@%n:%p
{% else %}
ControlPath ~/.cache/ssh/%r@%n:%p
{% endif %}
ControlPersist 10m
IdentitiesOnly yes
UseKeychain yes
TCPKeepAlive no
ServerAliveCountMax 5
ServerAliveInterval 2

Include config.d/*
