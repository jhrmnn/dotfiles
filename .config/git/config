    navigate = true
[fetch]
    prune = yes
    pruneTags = yes
    recurseSubmodules = on-demand
[alias]
    ls-assumed = !git ls-files -v | grep '^[[:lower:]]'
    plog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%aN>%Creset' --date=relative
    rbc = rebase --continue
[interactive]
    diffFilter = delta --color-only
[http]
